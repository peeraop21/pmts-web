@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PMTs.DataAccess.ModelView.ProductCatalog.ProductCatalogModel
@using System.Linq

@{
    //if (Model.holdMaterialHistories != null)
    //{
    <div class="box-header">
        <h3 class="box-title"><i class="mdi mdi-format-color-fill"></i> @Localizer["Hold Material History"]</h3>
    </div>

    <div class="box-body">
        <div>
            <table id="RenderTableHis" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">@Localizer["No"]</th>
                        <th scope="col">@Localizer["Material No"]</th>
                        <th scope="col">@Localizer["Status"]</th>
                        <th scope="col">@Localizer["HoldRemark"]</th>
                        <th scope="col">@Localizer["ChangeProductNo"]</th>
                        <th scope="col">@Localizer["CreatedBy"]</th>
                        <th scope="col">@Localizer["CreatedDate"]</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int No = 1;
                        string statusconvert = "Un Hold";
                        if (Model.holdMaterialHistories.Count > 0)
                        {

                            foreach (var item in Model.holdMaterialHistories)
                            {
                                if (item.IsLocked.ToString() == "True")
                                {
                                    statusconvert = "Hold";
                                }
                                else
                                {
                                    statusconvert = "Un Hold";
                                }
                                <tr>
                                    <td style="text-align:center">@No</td>
                                    <td>@item.MaterialNo</td>
                                    <td>@statusconvert </td>
                                    <td>@item.HoldRemark</td>
                                    <td>@item.ChangeProductNo</td>
                                    <td>@item.CreatedBy</td>
                                    <td>@item.CreatedDate</td>
                                </tr>
                                No++;
                            }
                        }

                    }
                </tbody>
            </table>
        </div>
      </div>
        @*}*@
    }

        <script>
            $(document).ready(function () {
                $('#RenderTableHis').datatable({
                    "scrolly": 200,
                    "scrollx": true,
                    "autowidth": true
                });
            });
        </script>