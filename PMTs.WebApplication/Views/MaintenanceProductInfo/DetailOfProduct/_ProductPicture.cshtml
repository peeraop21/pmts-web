                            </div>

                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(@Model.modelProductPicture.Pic_FGPath))
                                {
                                    <img src='@Model.modelProductPicture.Pic_FGPath' style="width:90%">
                                }
                            </div>
