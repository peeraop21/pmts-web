@model PMTs.DataAccess.ModelView.NewProduct.TransactionDataModel
<div id="Purchase_data">
    <form asp-controller="NewProduct" asp-action="SavePurchaseERP" data-ajax="true" data-ajax-update="#Purchase_data" data-ajax-success="onUpdatePurSuccess">

        <div class="row">
            <div class="col-md-12">

                <div class="box box-warning">
                    <div class="box-header">
                        <b>  Purchase Text 1-4 (For Trading Goods Only)</b>

                        @*<input type="hidden" id="selectedTab" name="selectedTab" value="@ViewBag.SelectedTab" />*@
                    </div>
                    <div class="box-body">
                        <div class="form-group row">
                            <div class="col-sm-8">
                                <input class="form-control" placeholder="Text1" asp-for="modelProductERPPurchase.PurTxt1" maxlength="40" />
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-8">
                                <input class="form-control" placeholder="Text2" asp-for="modelProductERPPurchase.PurTxt2" maxlength="40" />
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-8">
                                <input class="form-control" placeholder="Text3" asp-for="modelProductERPPurchase.PurTxt3" maxlength="40" />
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-8">
                                <input class="form-control" placeholder="Text4" asp-for="modelProductERPPurchase.PurTxt4" maxlength="40" />
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-8">
                                <button type="submit" class="btn btn-primary" value="SavePurchase">Save Purchase</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- /.box -->
            </div>
        </div>
    </form>
    <script>
          $(document).ready(function () {

        var Success = '@ViewBag.Massege'
              if (Success !== null && Success !== "") {
                  modalDialog("success", Success);
        }
    });
        //var onUpdatePurSuccess = function (res) {
        //    alert("Save Success");
        //};
    </script>
</div>