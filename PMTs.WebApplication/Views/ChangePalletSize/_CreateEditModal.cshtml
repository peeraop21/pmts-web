@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PMTs.DataAccess.ModelView.ChangePalletSizeViewModel
@using System.Linq

@{
    Layout = null;
}
<style>
    .btn {
        min-width: 80px;
    }
</style>

@*Create Edit*@
<div class="modal bs-example-modal-lg" id="modal-create-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <form id="edit-changepalletsize">
                <input type="hidden" id="edit_Id" asp-for="MasterData.Id" />
                <input type="hidden" id="edit_FactoryCode" asp-for="MasterData.FactoryCode" />
                <div class="modal-header">
                    <h4 class="modal-title" id="modelHeader">@Localizer["Edit MasterData"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true">×</button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="row col-md-12 mb-2 mt-2">
                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["MaterialNo"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" maxlength="10" id="edit_MaterialNo" asp-for="MasterData.MaterialNo" readonly />
                            </div>
                        </div>

                        <div class="row col-md-12 mb-2">
                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Pc"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" id="edit_Pc" asp-for="MasterData.Pc" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Bun"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="number" id="edit_Bun" asp-for="MasterData.Bun" onkeyup="CalculateBoxPallet()" readonly />
                            </div>
                        </div>

                        <div class="row col-md-12 mb-2">
                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["BunLayer"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="number" id="edit_BunLayer" asp-for="MasterData.BunLayer" onkeyup="CalculateBoxPallet()" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["LayerPallet"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="number" id="edit_LayerPalet" asp-for="MasterData.LayerPalet" onkeyup="CalculateBoxPallet()" readonly />
                            </div>
                        </div>

                        <div class="row col-md-12 mb-2">

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["BoxPallet"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="number" id="edit_BoxPalet" asp-for="MasterData.BoxPalet" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["PalletizationPath"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <select id="edit_PalletizationPath" class="form-control" asp-for="MasterData.PalletizationPath" required="" style="width: 100%"
                                        asp-items="@(new SelectList(Model.StandardPatternNames,"Picturepath","Picturepath"))">
                                    <option value="">--- @Localizer["Please Select Item"] ---</option>
                                </select>
                                @*<input class="form-control" type="text"  id="edit_PalletizationPath" asp-for="MasterData.PalletizationPath" readonly />*@
                            </div>
                        </div>

                        <div class="form-group col-md-6" style="margin-top:30px">
                            <button type="button" class="btn btn-success float-right" id="btn-save" disabled onclick="ChangePalletSize()">@Localizer["Save"]</button>
</div>
                        <div class="form-group col-md-6" style="margin-top:30px">
                            <button type="button" class="btn btn-danger waves-effect text-center float-left" data-dismiss="modal" data-backdrop="false" id="btn-close" onclick="CloseChangePalletSize()">@Localizer["Close"]</button>
</div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>