@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PMTs.DataAccess.ModelView.MaintenancePaperWidth.MaintenancePaperWidthViewModel

@{ int No = 1; }

@foreach (var item in Model.PaperWidthViewModelList)
{
    //if (item.Status == true)
    //{
    <tr>
        <th scope="row">@No</th>
        <td>@item.Group1</td>
        <td>@item.Group2</td>
        <td>@item.Group3</td>
        <td>@item.Group4</td>
        <td>@item.Width</td>
        <td>
            <button type="button" class="btn btn-default"  data-id="@item.Id" data-group1="@item.Group1" data-group2="@item.Group2" data-group3="@item.Group3" data-group4="@item.Group4" data-width="@item.Width"
                    onclick="viewShow(this.getAttribute('data-id'),this.getAttribute('data-group1'),this.getAttribute('data-group2'),this.getAttribute('data-group3'),this.getAttribute('data-group4'),this.getAttribute('data-width'))"><span class="fas fa-file-alt text-info btn" aria-hidden="true"></span></button>
        </td>
        <td>
            <button type="button" class="btn btn-default"  data-id="@item.Id" data-group1="@item.Group1" data-group2="@item.Group2" data-group3="@item.Group3" data-group4="@item.Group4" data-width="@item.Width" data-CreatedDate="@item.CreatedDate" data-CreatedBy="@item.CreatedBy"
                    onclick="viewEdit(this.getAttribute('data-id'),this.getAttribute('data-group1'),this.getAttribute('data-group2'),this.getAttribute('data-group3'),this.getAttribute('data-group4'),this.getAttribute('data-width'),this.getAttribute('data-CreatedDate'),this.getAttribute('data-CreatedBy'))"><span class="fas fa-pencil-alt text-warning" aria-hidden="true"></span></button>
        </td>
        @*<td>
                <a onclick="ConfirmDelete(@item.Id)">  <i class="fas fa-trash text-danger"></i></a>
            </td>*@
    </tr>

    No++;
    @* } *@
}

<!-- Start View Modal -->
