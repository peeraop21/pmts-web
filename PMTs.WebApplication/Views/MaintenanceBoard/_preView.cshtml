                        <tr style="height:50px">
                            @* <td align="center" style="border-color:black">@Html.Raw(item.tbl0)</td>*@
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl0)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl1)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl2)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl3)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl4)</td>
                        </tr>
                    }
                    else if (i == 3)
                    {
                        <tr style="height:50px">
                            <th rowspan=@Model.PreviewTblHeader.cover_row style="border-color:black;font-size:16px;text-align:center">@Html.Raw(Model.PreviewTblHeader.cover)</th>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl0)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl1)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl2)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl3)</td>
                            <td align="center" style="border-color:black">@Html.Raw(item.tbl4)</td>
                        </tr>
                    }
                    else
