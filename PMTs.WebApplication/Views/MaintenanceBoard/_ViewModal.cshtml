                                <h3 class="">
                                    @Localizer["Board Combine"]
                                </h3>
                                <hr>
                            </div>

                            <div class="card-body">

                                <div class="row">
                                    <div class="form-group col-md-5" style="padding-right:0">
                                        <label class="control-label" for="Code">@Localizer["Board Code"]<i style="color:red"> *</i></label>
