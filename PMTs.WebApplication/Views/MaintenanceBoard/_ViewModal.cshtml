                                        @* <label class="control-label" for="Code"><i style="color:dimgray"> * สำหรับ Generate board dummy</i></label>*@
                                        <div class="form-group col-md-12">
                                            @*<div class="form-check" style="padding-left: 0;padding-top: 20px;">
                                                    <input type="checkbox" class="form-check-input" id="idgeneratecode">
                                                    <label class="form-check-label" for="idgeneratecode">Generate Boardcode</label>
                                                </div>*@
