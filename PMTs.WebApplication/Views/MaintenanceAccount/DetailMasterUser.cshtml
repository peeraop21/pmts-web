@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PMTs.DataAccess.ModelView.MasterUserViewModel
@{
    ViewData["Title"] = "Detail User";
}
<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">@Localizer["Account Management"]</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">@Localizer["Account"]</a>
            </li>
            <li class="breadcrumb-item active">@Localizer["Detail Account"]</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-info">
            <div class="card-header">
                <h4 class="m-b-0 text-white">@Localizer["Detail Personal Information"]</h4>
            </div>
            <div class="card-body">
                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        <h3 class="box-title">@Localizer["Person Info"]</h3>
                        <hr class="m-t-0 m-b-20">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["USERNAME"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.USER_NAME </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["Role"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.Roledata </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["DOMAIN"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.USER_DOMAIN </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3"></label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["SALE ORG"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.SALE_ORG </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["PLANT CODE"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static">@Model.PLANT_CODE </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["First Name[EN]"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.FIRST_NAME_EN </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["Last Name[EN]"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.LAST_NAME_EN </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["First Name[TH]"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.FIRST_NAME_TH </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["Last Name[TH]"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.LAST_NAME_TH </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["Email"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.EMAIL </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["TELEPHONE"]:</label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"> @Model.TELEPHONE </p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3">@Localizer["Status"]:</label>
                                    <div class="col-md-9">
                                        @if (Model.IS_FLAG_DELETE == true)
                                        {
                                            <button class="btn bg-danger" type="button" disabled></button>
                                        }
                                        else
                                        {
                                            <button class="btn bg-success" type="button" disabled></button>
                                        }

                                        <span class="small text-danger">(Check = NonActive)</span>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-3"></label>
                                    <div class="col-md-9">
                                        <p class="form-control-static"></p>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/AdminLTE/plugins/iCheck/icheck.min.js"></script>