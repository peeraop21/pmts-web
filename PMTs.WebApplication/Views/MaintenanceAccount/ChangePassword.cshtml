@model PMTs.DataAccess.ModelView.ChangePasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    //ViewData["Title"] = "ChangePassword";
    //Layout = "~/Views/Shared/_LayoutNew.cshtml";
    //Layout = null;
}

<!--alerts CSS -->
@*<link href="~/lib/material-pro/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css">*@
<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">@Localizer["Account Management"] </h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">Account</a>
            </li>
            <li class="breadcrumb-item active">
                @*<a href="javascript:history.back()">Edit Account</a>*@
                <a asp-action="EditMasterUser" asp-route-id="@Model.USER_ID">@Localizer["Edit Account"]</a>
            </li>
            <li class="breadcrumb-item active">@Localizer["Change Password"]</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card card-outline-warning">
            <div class="card-header">
                <h4 class="m-b-0 text-white">@Localizer["Change Password"] </h4>
            </div>
            <div class="card-body">

                <form asp-action="ChangePassword" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="USER_ID" />

                    <div class="form-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">@Localizer["OldPassword"]:*</label>
                                    <div class="col-md-6">
                                        <input asp-for="OldPassword" class="form-control" required />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">@Localizer["NewPassword"]:*</label>
                                    <div class="col-sm-6">
                                        <input asp-for="NewPassword" class="form-control" required />

                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="control-label text-right col-md-4">@Localizer["ConfirmPassword"]:*</label>
                                    <div class="col-sm-6">
                                        <input asp-for="ConfirmPassword" class="form-control" required />

                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <!--/span-->
                        </div>
                        <hr />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-success pull-right"><i class="fa fa-check"></i>@Localizer["Change Password"]</button>
                            @*<input type="submit" value="Create" class="btn btn-default" />*@
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <!-- /.box-footer -->
                </form>
                @*<div>
                        <a asp-action="Index">Back to List</a>
                    </div>*@
            </div>
        </div>
    </div>
</div>

<div class="modal in " id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Localizer["Messsage Alert"]</h4>
            </div>
            <div class="modal-body">
                @Localizer["Change Password Success"]
            </div>
            <div class="modal-footer">
                <button type="button" onclick="window.location.href='@Url.Action("index")'" class="btn btn-info waves-effect waves-light">@Localizer["OK"]</button>
            </div>
        </div>
    </div>
</div>

<div class="modal in " id="myModalError" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Localizer["Messsage Alert"]</h4>
            </div>
            <div class="modal-body">
                @Localizer["Change Password UNSuccess !!"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect waves-light">@Localizer["OK"]</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var chkViewBag = '@ViewBag.message';
        if (chkViewBag === "Success") {
            $('#myModal').modal("show");

        } else if (chkViewBag === "Warning") {
            $('#myModalError').modal("show");
        }
    });
</script>

