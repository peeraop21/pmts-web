    function ResentBOM() {
        var materialNo = $('#tmpparentmaterialno').val();
        if(materialNo != "" && materialNo != null)
        {
            swal({
                title: "Confirmation",
                text: "ท่านต้องการส่ง BOM " + materialNo + " ไปสร้างบน SAP อีกครั้งใช่หรือไม่?",
                icon: "warning",
                buttons: {
                    confirm: "Yes",
                    cancel: true,
                },
                dangerMode: false,
            }).then((willAccect) => {
                if (willAccect) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("ResentBOM", "Bom")',
                        data: { materialNo: materialNo },
                        async: false,
                        success: function (res) {
                            if (res.IsSuccess) {
                                swal("Success!", res.ExceptionMessage, "success")
                                    .then(() => {
                                        $("#modalLoading").modal('hide');
                                        UpdateTable();
                                    });
                            } else {
                                $("#modalLoading").modal('hide');
                                swal("Error!", res.ExceptionMessage, "error");
                            }
                            return false;
                        },
                        error: function () {
                            $("#modalLoading").modal('hide');
                            swal("Error!", res.ExceptionMessage, "error");
                            return false;
                        }
                    });
                }
            });
        }
        else
        {
            swal("Warning", "Please select resent material number!", "warning");
        }
    }
