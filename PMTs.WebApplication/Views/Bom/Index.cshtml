@section Scripts{
    <script>

    $(document).ready(function () {
        //datatable child when search by mat
        $('#Bomdatatable').DataTable();

        $('#BomdatatableParentSearch').DataTable();
        $('#btnAddBomChild').css('display', 'none');
       // $('#btnAddBomChild').css('display', 'block');
    });

    //for check box is check
    $("#btnAddChild").click(function () {
       var selectedGroups  = new Array();
        $("input[name='form-check-input[]']:checked").each(function() {
            selectedGroups.push($(this).val());
        });
        let parentmat = $('#setBomParent').val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("AddBomStructNew", "Bom")',
            data: { parentmat: parentmat, array: JSON.stringify(selectedGroups), mat: $("#MaterialNo").val(), app: $("#AbbservName").val(), prod: $("#ProductCode").val()   },
            async: false,
            success: function (res) {
                if (res !== false) {
                    $("#DataTableBom").html(res.view);
                    $('#Bomdatatable').DataTable();
                    $('#searchChild').modal('hide');
                    if (res.datadup === "") {
                        swal("Save", "Save is Success!", "success");
                    } else
                    {
                        swal("Save", "Data is Duplicate : " + res.datadup, "success");
                        //swal("Data is Duplicate" + res.datadup, "", "warning");
                    }

                }
                else {
                    swal("Can not find Data", "", "warning");
                    $('#btnAddBomChild').css('display', 'none');
                }
            },
            error: function () { }
        });
    });

    //Search By mat or pc
    $("#btnSearchBomStruct").click(function () {
        var txtSearch = $("#txtSearch").val();
        var ddlSearch = $("#ddlSearch").val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("SearchBomStruct", "Bom")',
            data: { txtSearch: txtSearch, ddlSearch: ddlSearch },
            success: function (res) {
                console.log(res);
                if (res !== false) {
                    $("#DataTableBomParent").html(res);
                    $('#BomdatatableParent').DataTable();
                    $('#modal-Search-parent').modal('show');
                }
                else {
                    swal("Can not find Data", "", "warning");
                    $('#btnAddBomChild').css('display', 'none');
                }
            },
            error: function () { }
        });
    });

    //Select Mat by modal and find child mat
     function SearchBomChildByMat(material) {
            var txtSearch = $("#txtSearch").val();
            var ddlSearch = $("#ddlSearch").val();
         $.ajax({
            type: 'POST',
            url: '@Url.Action("SearchBomStructChild", "Bom")',
             data: { Mat: material, txtSearch: txtSearch, ddlSearch: ddlSearch },
            success: function (res) {
               // console.log(restxtSearch: txtSearch, ddlSearch: ddlSearch);
                if (res !== false) {
                    $("#DataTableBom").html(res.viewchild);
                    $('#Bomdatatable').DataTable();
                    $("#parentSelectTable").html(res.viewparent);
                   // $('#ParentSelectTable').DataTable();
                   // $('ParentSelectTable').dataTable({ searching: false, paging: false, info: false });
                    $('#ParentSelectTable').DataTable({
                        "searching": false,
                        "paging": false,
                        "info": false
                    });
                    $('#setBomParent').val(material);
                    $('#btnAddBomChild').css('display', 'block');
                    $('#modal-Search-parent').modal('hide');
                    $('#tmpparentmaterialno').val(res.parentmaterialno)
                    $('#plantid').val('')
                }
                else {
                    swal("Can not find Data", "", "warning");
                }
            },
            error: function () { }
        });
      }

      function copybomtonewplant()
        {
          let  pmat  =   $('#tmpparentmaterialno').val()
          let plants = $('#plantid').val()
          if (pmat === '') {
              swal("Please Search Data", "", "warning");
              return
          } else if (plants === '') {
              swal("Please Select Plant", "", "warning");
              return
          }
        $.ajax({
            type: 'POST',
            url: '@Url.Action("CopyBomToNewPlant", "Bom")',
            data: { parentmat: pmat, plant: plants },
            success: function (res) {
                if (res === 'Success') {
                    swal("Create Bom is success", "", "success");
                    $('#plantid').val('')
                } else {
                    if (res === 'NotMatch') {
                        swal("Create Bom is fail", "Material in masterdata not found", "warning");
                    } else
                    {
                        swal("Create Bom is fail", "", "warning");
                    }

                }
            },
            error: function () { }
        });
      }

    //delete child mat
    function ConfirmDelete(Id) {
        swal({
            title: "Are you sure ?",
            text: "Are you sure you want to delete?",
            icon: "info",
                        buttons: {
                                confirm: "Ok",
                                cancel: true,
                            },
                            dangerMode: false,
        })
            .then((willDelete) => {
            if (willDelete) {
                $.ajax({
                type: 'PUT',
                url: '@Url.Action("DeleteBomStruct", "Bom")',
                data: { Id: Id },
                success: function (res) {
                    $("#form-input-bomStructure").show();
                    $("#DataTableBom").html(res);
                    $('#Bomdatatable').DataTable();
                }

                });
            }
        });
    }

        function BindBOMStructToModal(item) {
            $("#EditBOM_Id").val($(item).attr("data-Id"));
            $("#EditBOM_FactoryCode").val($(item).attr("data-FactoryCode"));
            $("#EditBOM_MaterialNo").val($(item).attr("data-MaterialNo"));
            $("#EditBOM_Plant").val($(item).attr("data-Plant"));
            $("#EditBOM_BomUsage").val($(item).attr("data-BomUsage"));
            $("#EditBOM_WeighBom").val($(item).attr("data-WeighBom"));
            $("#EditBOM_PreviousBom").val($(item).attr("data-PreviousBom"));
            $("#EditBOM_Follower").val($(item).attr("data-Follower"));
            $("#EditBOM_Amount").val($(item).attr("data-Amount"));
            $("#EditBOM_Unit").val($(item).attr("data-Unit"));
            $("#EditBOM_PdisStatus").val($(item).attr("data-PdisStatus"));
            $("#EditBOM_TranStatus").val($(item).attr("data-TranStatus"));
            $("#EditBOM_SapStatus").val($(item).attr("data-SapStatus"));

            $("#modal-edit-bom").modal('show');
        }

        function EditBOMStruct()
        {
            let bomStructModel = {
                "Id": $("#EditBOM_Id").val(),
                "FactoryCode": $("#EditBOM_FactoryCode").val(),
                "MaterialNo": $("#EditBOM_MaterialNo").val(),
                "Plant": $("#EditBOM_Plant").val(),
                "BomUsage": $("#EditBOM_BomUsage").val(),
                "WeighBom": $("#EditBOM_WeighBom").val(),
                "PreviousBom": $("#EditBOM_PreviousBom").val(),
                "Follower": $("#EditBOM_Follower").val(),
                "Amount": $("#EditBOM_Amount").val(),
                "Unit": $("#EditBOM_Unit").val(),
                "PdisStatus": $("#EditBOM_PdisStatus").val(),
                "TranStatus": $("#EditBOM_TranStatus").val(),
                "SapStatus": $("#EditBOM_SapStatus").val()
            };

            $.ajax({
                type: 'POST',
                url: '@Url.Action("EditBomStruct", "Bom")',
                data: { bomStructStr: JSON.stringify(bomStructModel) },
                success: function (res) {
                    if (res.IsSuccess) {
                        swal("Updated successfully", "", "success")
                            .then((willDelete) => {
                                if (willDelete) {
                                    $("#closeBOMBtn").click();
                                    $("#txtSearch").val($("#EditBOM_MaterialNo").val());
                                    $("#ddlSearch").val("MaterialNo");
                                    SearchBomChildByMat($("#EditBOM_MaterialNo").val());
                                }
                            });
                    }
                    else
                    {
                        swal("Updated Fail", res.ExceptionMessage, "warning")
                            .then((willDelete) => {
                                if (willDelete) {
                                    $("#closeBOMBtn").click();
                                }
                            });
                    }
                }
            });
        }

    //Click Add mat child
    $("#btnAddBomChild").click(function () {
            if ($('#setBomParent').val() === "")
            {
                swal("Please Select Parent", "", "warning");
            } else
            {
                $('#searchChild').modal('show');
            }
    });

