@model PMTs.DataAccess.ModelView.BOMViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="box-body table-responsive">
    <table id="BomdatatableChild" class="table table-bordered color-table dataTable no-footer" cellspacing="0">
        <thead>
            <tr style="white-space:nowrap;white-space:nowrap;background:darkgray;color:black;">
                <th>@Localizer["Material No"]</th>
                <th>@Localizer["PC"]</th>
                <th>@Localizer["Customer Name"]</th>
                <th>@Localizer["Description"]</th>
                <th class="text-center">@Localizer["Select"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.lstMasterData)
            {
                <tr>
                    <td>@item.MaterialNo</td>
                    <td>@item.Pc</td>
                    <td>@item.CustName</td>
                    <td>@item.Description</td>
                    <td class="text-center"><a data-target="@item.MaterialNo" onclick="SearchBomChildByMat(this.getAttribute('data-target'));"><i class="fas fa-trash text-danger"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#BomdatatableChild').DataTable();
        });
    </script>
}