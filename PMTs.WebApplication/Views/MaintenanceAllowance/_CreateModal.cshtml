@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model PMTs.DataAccess.ModelView.MaintenanceAllowance.MaintenanceAllowanceViewModel

<div class="modal fade" id="modal-create">
    <div class="modal-dialog modal-lg" style="width: 90%">
        @*<div class="modal fade bs-example-modal-lg" id="modal-create" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-xl">*@
        <div class="modal-content">
            <form id="create-Allowance-form" enctype="multipart/form-data">
                @*asp-controller="MaintenanceAllowance" asp-action="SaveAllowance" data-ajax="true" data-ajax-success="onSaveSuccess" data-ajax-method="POST">*@
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">@Localizer["Create Allowance Precess"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Machine"]<i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="AllowanceViewModel.Machine" maxlength="50" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Range"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="AllowanceViewModel.Range" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Percen"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="AllowanceViewModel.Percen" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["SheetMin"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="AllowanceViewModel.SheetMin" />
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["SheetMax"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="AllowanceViewModel.SheetMax" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSubmit" class="btn btn-info">@Localizer["Save"]</button>
                    <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" data-backdrop="false">@Localizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>