    <script>
        function viewShow(Id, EMachine, ERange, EPercen, ESheetMin, ESheetMax) {
            $('#Id').val(Id);
            $('#Machine').val(EMachine);
            $('#Range').val(ERange);
            $('#Percen').val(EPercen);
            $('#SheetMin').val(ESheetMin);
            $('#SheetMax').val(ESheetMax);

            $('#modal-view').modal('show');
        }

        function viewEdit(Id, EMachine, ERange, EPercen, ESheetMin, ESheetMax) {
            $('#EId').val(Id);
