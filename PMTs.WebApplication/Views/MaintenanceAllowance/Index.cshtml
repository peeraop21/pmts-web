            $('#ERange').val(ERange);
            $('#EPercen').val(EPercen);
            $('#ESheetMin').val(ESheetMin);
            $('#ESheetMax').val(ESheetMax);

            $('#modal-edit').modal('show');
        }

        function getData() {
            let req = {
                "Id": $("#EId").val(),
                "Machine": $("#EMachine").val(),
                "Range": $("#ERange").val(),
                "Percen": $("#EPercen").val(),
                "SheetMin": $("#ESheetMin").val(),
                "SheetMax": $("#ESheetMax").val(),
            };
            return req;
        }

        $('#btnSubmit').click(function () {
            DisabledSubmitButton(this);
            if ($('#AllowanceViewModel_Machine').val() === "") {
                swal("Please input data!", { icon: "warning", });
            }
            else {
                var form = $('#create-Allowance-form').serialize();
                $.ajax({
                    url: '@Url.Action("SaveAllowance", "MaintenanceAllowance")',
                    type: "POST",
                    async: false,
                    data: form,
                    dataType: "json",
                    success: function (data) {
                        UpdateAllowanceTableNew(data);
                        swal("Save Success!", { icon: "success", });
                        $('#modal-create').modal('hide');
                        $('.modal-backdrop').hide();
                        $("body").removeClass("modal-open");
                    }
                });
            }
        });

