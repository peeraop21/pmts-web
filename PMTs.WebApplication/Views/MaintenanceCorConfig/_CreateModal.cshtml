@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model PMTs.DataAccess.ModelView.MaintenanceCorConfig.MaintenanceCorConfigViewModel

<div class="modal fade" id="modal-create">
    <div class="modal-dialog modal-lg" style="width: 90%">
        @*<div class="modal fade bs-example-modal-lg" id="modal-create" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-xl">*@
        <div class="modal-content">
            <form id="create-CorConfig-form">
                @*asp-controller="MaintenanceCorConfig" asp-action="SaveCorConfig" data-ajax="true" data-ajax-success="onSaveSuccess" data-ajax-method="POST">*@
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">@Localizer["Create CorConfig"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Name"]<i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="CorConfigViewModel.Name" maxlength="50" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["MinOut"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="CorConfigViewModel.MinOut" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["MaxOut"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="CorConfigViewModel.MaxOut" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["CutOff"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="CorConfigViewModel.CutOff" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Mintrim"]</label>
                        </div>
                        <div class="form-group col-sm-3">
                            <input type="checkbox" class="filled-in" id="Mintrim" />
                            <label class="form-check-label" for="Mintrim"></label>

                            <input type="hidden" asp-for="CorConfigViewModel.Mintrim" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["TearTape"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="CorConfigViewModel.TearTape" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["TearTapeMax"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="CorConfigViewModel.TearTapeMax" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSubmitCorconfig" class="btn btn-primary">@Localizer["Create"]</button>
                    <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" data-backdrop="false">@Localizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>