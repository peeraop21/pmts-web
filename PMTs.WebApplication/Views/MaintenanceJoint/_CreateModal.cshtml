@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model PMTs.DataAccess.ModelView.MaintenanceJoint.MaintenanceJointViewModel

<div class="modal fade bs-example-modal-lg" id="modal-create-joint">
    <div class="modal-dialog modal-lg"  style="width:90%">
        <div class="modal-content">
            <form id="create-Joint-form">
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">@Localizer["Create Joint"]</h4>
                    <button type="button" class="close" data-dismiss="modal"  data-backdrop="false" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["JointId"]<i style="color:red">*</i></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input class="form-control" id="jointIdCreate" maxlength="3" asp-for="JointViewModel.JointId" />
                            <span class="text-danger" id="jointIdCreateReq" hidden>@Localizer["The JointId field is requried."]</span>
                        </div>
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["JointName"]<i style="color:red">*</i></label>
                        </div>
                        <div class="form-group col-md-4">
                            <input class="form-control" id="jointNameCreate" maxlength="50" asp-for="JointViewModel.JointName" />
                            <span class="text-danger" id="jointNameCreateReq" hidden>@Localizer["The JointName field is requried."]</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["KiwiJoinCodeInner"]</label>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" maxlength="2" id="KiwiJoinCodeInnerCreate" asp-for="JointViewModel.KiwiJoinCodeInner" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label" for="JointName">@Localizer["KiwiJoinCodeOuter"]</label>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" maxlength="2" id="KiwiJoinCodeOuterCreate" asp-for="JointViewModel.KiwiJoinCodeOuter" />
                        </div>
                    </div>
                    @*<div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["JointDescription"]</label>
                        </div>
                        <div class="form-group col-md-4">
                            <input class="form-control" maxlength="50" asp-for="JointViewModel.JointDescription" />
                        </div>
                    </div>*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" onclick="CreateJoint()">@Localizer["Save"]</button>
                    <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" data-backdrop="false">@Localizer["Close"]</button>
                </div>
            </form>
        </div>
    </div>
</div>