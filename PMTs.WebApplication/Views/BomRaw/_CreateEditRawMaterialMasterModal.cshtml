@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PMTs.DataAccess.ModelView.BomRawMaterial.RawMaterialMasterViewModel
@using System.Linq

@{
    Layout = null;
}
<style>
    .btn {
        min-width: 80px;
    }

    select {
        cursor: pointer;
        width: 100%;
        text-align: center;
        text-align-last: center;
    }

        select option {
            text-align: center;
        }
</style>

@*Create Edit*@
<div class="modal  bs-example-modal-xl" id="modal-rmm-create-edit" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

            <form id="edit-rawmaterialmaster">
                <input type="hidden" id="rmm_DateOfCreation" asp-for="@Model.PpcRawMaterialMaster.DateOfCreation" />
                <input type="hidden" id="rmm_Id" asp-for="@Model.PpcRawMaterialMaster.Id" />
                <input type="hidden" id="rmm_OldMaterialNumber" asp-for="@Model.PpcRawMaterialMaster.OldMaterialNumber" />
                <input type="hidden" id="rmm_Plant" asp-for="@Model.PpcRawMaterialMaster.Plant" />
                <div class="modal-header">
                    <h4 class="modal-title" id="modelHeader">@Localizer["Create Raw Material Master"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true" onclick="CloseRawMaterialMaster()">×</button>
                </div>

                <div class="modal-body">
                    <div class="row">
                        <div class="row col-md-12 mb-2 mt-2">
                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Material No."]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" type="text" maxlength="100" id="rmm_MaterialNo" asp-for="PpcRawMaterialMaster.MaterialNumber" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Material Description"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" maxlength="1000" id="rmm_MaterialDescription" asp-for="PpcRawMaterialMaster.MaterialDescription" readonly />
                            </div>
                        </div>

                        <div class="row col-md-12 mb-2">

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Material Type"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" id="rmm_MaterialType" asp-for="PpcRawMaterialMaster.MaterialType" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Material Group"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" maxlength="100" id="rmm_MaterialGroup" asp-for="PpcRawMaterialMaster.MaterialGroup" readonly />
                            </div>
                        </div>

                        <div class="row col-md-12 mb-2">

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["NetWeight"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" id="rmm_NetWeight" type="number" asp-for="PpcRawMaterialMaster.NetWeight" readonly />
                            </div>

                            <div class="form-group col-md-2">
                                <label class="control-label float-right mt-1">@Localizer["Uom"]</label>
                            </div>
                            <div class="form-group col-md-4">
                                <input class="form-control" maxlength="100" id="rmm_Uom" asp-for="PpcRawMaterialMaster.Uom" readonly />
                            </div>
                        </div>

                        <div class="form-group col-md-6" style="margin-top:30px">
                            <button type="button" class="btn btn-success float-right" id="RmmSaveBtn" disabled onclick="SaveRawMaterialMaster()">@Localizer["Save"]</button>
                        </div>
                        <div class="form-group col-md-6" style="margin-top:30px">
                            <button type="button" class="btn btn-danger waves-effect text-center float-left" data-dismiss="modal" data-backdrop="false" id="RmmCloseBtn" onclick="CloseRawMaterialMaster()">@Localizer["Close"]</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>