        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myRawMaterialLabel">Raw Material</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-2 setLeft">
                        <label class="control-label">@Localizer["Raw Material"]</label>
                    </div>
                    <div class="form-group col-md-3">
                        <div class="input-group footable-filtering-search">
                            <label class="sr-only">Search</label>
                            <div class="input-group">
                                <input id="RawMaterialSearch" type="text" class="form-control" placeholder="Search">
                                @*<div class="input-group-append">
                                    <button id="btnSearchRawMat"
                                    type="button"
                                    class="btn btn-primary"
                                    style="height: 30px; background-color: #dbdbdb; border-color: #dbdbdb;"
                                    onclick="ClickSearchRawMaterial()">
                                    <span class="fas fa-search"></span>
                                    </button>
                                    </div>*@
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-2 setLeft">
                        <label class="control-label">@Localizer["Material Description"]</label>
                    </div>
                    <div class="form-group col-md-3">
                        <div class="input-group footable-filtering-search">
                            <label class="sr-only">Search</label>
                            <div class="input-group">
                                <input id="MaterialDescSearch" type="text" class="form-control" placeholder="Search">
                                @*<div class="input-group-append">
                                    <button id="btnSearchRawMat"
                                    type="button"
                                    class="btn btn-primary"
                                    style="height: 30px; background-color: #dbdbdb; border-color: #dbdbdb;"
                                    onclick="ClickSearchRawMaterial()">
                                    <span class="fas fa-search"></span>
                                    </button>
                                    </div>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-1">
                        <button class="btn btn-info" id="btnSearchRawMat" onclick="ClickSearchRawMaterial()">@Localizer["Search"]</button>
                        </div>
                </div>
                <div id="DivRawMaterialTable">
                    <partial name="_RawMaterialTable" model="Model" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal">Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
