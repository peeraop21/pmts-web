@model PMTs.DataAccess.ModelView.NewProduct.TransactionDataModel

@{
    ViewBag.Title = "";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="row" style="width: 100%">
    <div class="col-sm-6">
        <div style="height:auto;width:auto">
            <div id="MainPic">
                <div class="row" id="pic">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <img id="hc" src="~/images/HC.jpg" />
                    <input asp-for="modelProductSpec.CutSheetWid" type="text" style="position: absolute; left: 375px; top: 130px; width: 37px; border:none; text-align:center; color:black;" readonly />
                    <input id="ll" type="text" style="position: absolute; left: 222px; top: 262px; width: 50px; border:none; text-align:center; color:black;" readonly />
                    <input id="hh" type="text" style="position: absolute; left: 37px; top: 191px; width: 70px; border:none; text-align:center; color:black;" readonly />
                    <input id="cc" type="text" style="position: absolute; left: 320px; top: 0px; width: 75px; border:none; text-align:center; color:black;" readonly />
                </div>
            </div>
            <div id="FilePic">
                <center>
                    <br />
                    @Html.TextBoxFor(m => m.modelProductSpec.PrintMasterPath, new { @id = "iDrawingPath", @style = "display:none;" })
                    @if (Model.modelProductSpec.PrintMasterPath == null)
                    {
                        <img id="Pic_Drawing" style="width: auto; height: 279px;" />
                    }
                    else
                    {
                        <img id="Pic_Drawing" src="@Url.Content(@Model.modelProductSpec.PrintMasterPath)" style="width: auto; height: 279px;" />
                    }
                </center>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-11">
                    <input id="PrintMaster" name="PrintMaster" type="file" title="search image" accept="image/*" onchange="show_Drawing(this)" />
                </div>
                <div class="col-sm-1">
                    <i id="RM_Drawing" class="mdi mdi-close" style="color:red; display:none;" onclick="ClosePic()"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <h4>@Localizer["Honey Core"] </h4>
        <div class="form-group row">

            <div class="col-sm-5">
                @Localizer["Cut Sheet Width"] :
            </div>
            <div class="col-sm-3">
                <input type="text" id="SheetWid" maxlength="4" class="form-control mytextboxNumber" autocomplete="off" tabindex="3" />
            </div>
            <div class="col-sm-4">
                <button id="btProcess" class="btn btn-info waves-effect waves-light" type="button" tabindex="7" disabled>@Localizer["Calculate"]</button>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
            </div>
            <div class="col-sm-7">
                <span id="modelProductSpec_SheetWid-error" class="text-danger" style="display: none;">@Localizer["W' required"]</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
                @Localizer["Cut Sheet Length"] :
            </div>
            <div class="col-sm-3">
                <input type="text" asp-for="modelProductSpec.CutSheetLeng" maxlength="4" class="form-control mytextboxNumber" readonly />
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
            </div>
            <div class="col-sm-7">
                <span id="modelProductSpec_SheetLeng-error" class="text-danger" style="display: none;">@Localizer["L' required"]</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
            </div>
            <div class="col-sm-3">
                <input class="filled-in" type="checkbox" value="" id="chkTwoP" disabled>
                <label class="form-check-label" id="lbTwoP" for="chkTwoP" style="font-size:14px; font-weight:300;">
                    @Localizer["2Pieces"]
                </label>
                <input type="hidden" asp-for="modelProductSpec.TwoPiece" />
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Sheet Board"]
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Finished goods"]
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Localizer["Area"] :
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.SheetArea" type="text" class="form-control text-right" readonly />
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.BoxArea" type="text" class="form-control text-right" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Localizer["Weight"] ):
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightSh" type="text" class="form-control text-right" readonly>
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightBox" type="text" class="form-control text-right" readonly>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-8">
                @*@Localizer["** น้ำหนักต่างกัน เนื่องจากน้ำหนักกาว"]*@
            </div>
        </div>
    </div>
</div>