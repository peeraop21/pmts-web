@model PMTs.DataAccess.ModelView.NewProduct.TransactionDataModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="card card-outline">
    <h4 class="card-header">@Localizer["Process Properties"] </h4>
    <div class="card-body">
        @if (ViewData["TypeOfProperty"].ToString() != "0")
        {
            <div class="form-group">

                <div class="row">
                    @*<label asp-for="modelProductSpec.CutSheetWid" class="col-sm-6 control-label"></label>*@
                    <label class="col-md-6 control-label ">@Localizer["CutSheetWid"]<i style="color:red"> </i> </label>
                    <div class="col-md-5">
                        <div class="controls">
                            @Model.modelProductProp.CutSheetWid
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    @*<label asp-for="modelProductSpec.CutSheetLeng" class="col-sm-6 control-label"></label>*@
                    <label class="col-md-6 control-label">@Localizer["CutSheetLeng"] </label>
                    <div class="col-md-5">
                        <div class="controls">
                            @Model.modelProductProp.CutSheetLeng
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="form-group row">

            <label class="col-sm-6 control-label">@Localizer["JoinType"] </label>
            <div class="col-md-5">
                <div class="controls">
                    @Model.modelProductProp.JoinType
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="modelProductProp.Wire" class="col-sm-6 control-label">
            </label>
            <div class="col-md-5">
               @Model.modelProductProp.Wire
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-6 control-label">@Localizer[""]PrintMethod</label>
            <div class="col-md-5">
                <div class="controls">
                    @Model.modelProductProp.PrintMethod
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="modelProductProp.OuterJoin" class="col-sm-6 control-label"></label>
            <div class="col-md-5">
                @Model.modelProductProp.OuterJoin
            </div>
        </div>
    </div>
</div>