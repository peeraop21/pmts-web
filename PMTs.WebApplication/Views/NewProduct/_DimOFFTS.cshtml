@model PMTs.DataAccess.ModelView.NewProduct.TransactionDataModel

@{
    ViewBag.Title = "";
}

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<style>
    .vdc {
        border-left: 2px solid gray;
        height: 197px;
        position: absolute;
        left: 392px; /*86%;*/
        top: 21px;
    }

    .hdc1 {
        width: 30px; /*11%*/
        border-bottom: 2px solid gray;
        position: absolute;
        left: 379px; /*440px*/
        top: 20px;
    }

    .hdc2 {
        width: 30px; /*11%*/
        border-bottom: 2px solid gray;
        position: absolute;
        left: 379px; /*440px*/
        top: 218px;
    }

    .shLendc {
        width: 330px; /*71.8*/
        border-bottom: 2px solid gray;
        position: absolute;
        left: 41px; /*4.2%*/
        top: 240px;
    }

    .shLdc1 {
        border-left: 2px solid gray;
        height: 20px;
        position: absolute;
        left: 39px; /*4.2%*/
        top: 230px;
    }

    .shLdc2 {
        border-left: 2px solid gray;
        height: 20px;
        position: absolute;
        left: 369px; /*75.9*/
        top: 230px;
    }
</style>
<div class="row" style="width: 100%">
    <div class="col-sm-6">
        <div id="pic" style="height:auto;width:auto">
            <br />
            <div id="MainPic">
                <div class="vdc" id="vdc"></div>
                <div class="hdc1" id="hdc1"></div>
                <div class="hdc2" id="hdc2"></div>
                <div class="shLendc" id="shLendc"></div>
                <div class="shLdc1" id="shLdc1"></div>
                <div class="shLdc2" id="shLdc2"></div>
                <div class="row">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <img id="dc" src="~/images/SlipSheet.jpg" /><input asp-for="modelProductSpec.CutSheetWid" type="text" style="position: absolute; left: 373px; top: 114px; width: 40px; border:none; text-align:center; color:dimgray;" readonly />
                </div>
                <div class="row">
                    <input asp-for="modelProductSpec.CutSheetLeng" type="text" style="position: absolute; left: 195px; top: 232px; width: 40px; border:none; text-align:center; color:dimgray;" class="mytextboxNumber" readonly />
                </div>
            </div>
            <div id="FilePic">
                <center>
                    <br />
                    @Html.TextBoxFor(m => m.modelProductSpec.PrintMasterPath, new { @id = "iDrawingPath", @style = "display:none;" })
                    @if (Model.modelProductSpec.PrintMasterPath == null)
                    {
                        <img id="Pic_Drawing" style="width: auto; height: 180px;" />
                    }
                    else
                    {
                        <img id="Pic_Drawing" src="@Url.Content(@Model.modelProductSpec.PrintMasterPath)" style="width: auto; height: 180px;" />
                    }
                </center>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-11">
                    <input id="PrintMaster" name="PrintMaster" type="file" title="search image" accept="image/*" onchange="show_Drawing(this)" />
                </div>
                <div class="col-sm-1">
                    <i id="RM_Drawing" class="mdi mdi-close" style="color:red; display:none;" onclick="ClosePic()"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group row">
            <div class="col-sm-2">
            </div>
            <div class="col-sm-3">
                &nbsp;&nbsp;
                @Localizer["W'"]
            </div>
            <div class="col-sm-3">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Localizer["L'"]
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1">
            </div>
            <div class="col-sm-8">
                &nbsp;&nbsp;&nbsp;
                <input type="text" id="SheetWid" maxlength="4" style="width:80px; height: 25px; text-align: center;" class="form-control mytextboxNumber" autocomplete="off" tabindex="3" />&nbsp;mm.&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="text" id="SheetLeng" maxlength="4" style="width:80px; height: 25px; text-align: center;" class="form-control mytextboxNumber" autocomplete="off" tabindex="4" />&nbsp;mm.&nbsp;
            </div>
            <div class="col-sm-3">
                <button id="btProcess" class="btn btn-info waves-effect waves-light" type="button" tabindex="8" disabled>@Localizer["Calculate"]</button>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1">
            </div>
            <div class="col-sm-8">
                &nbsp;&nbsp;&nbsp;
                <input type="text" asp-for="modelProductSpec.CutSheetWidInch" style="width:80px; height: 25px; text-align: center;" class="form-control mytextboxNumber" autocomplete="off" tabindex="5" />&nbsp;inch.&nbsp;&nbsp;&nbsp;
                <input type="text" asp-for="modelProductSpec.CutSheetLengInch" style="width:82px; height: 25px; text-align: center;" class="form-control mytextboxNumber" autocomplete="off" tabindex="6" />&nbsp;inch.&nbsp;
            </div>
            <div class="col-sm-3">
                <input class="filled-in" type="checkbox" value="" id="chkTwoP" disabled>
                <label class="form-check-label" id="lbTwoP" for="chkTwoP" style="font-size:14px; font-weight:300;">
                    @Localizer["2Pieces"]
                </label>
                <input type="hidden" asp-for="modelProductSpec.TwoPiece" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <span id="modelProductSpec_SheetWid-error" class="text-danger" style="display: none;">@Localizer["W' required"]</span>
                <span id="modelProductSpec_SheetLeng-error" class="text-danger" style="display: none;">@Localizer["L' required"]</span>
                <span id="modelProductSpec_BoxArea-error" class="text-danger" style="display: none;">@Localizer["FG required"]</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Sheet Board"]
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Finished goods"]
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Localizer["Area"] :
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.SheetArea" type="text" class="form-control text-right" readonly />
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.BoxArea" type="text" tabindex="7" class="form-control text-right" required />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Localizer["Weight"] :
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightSh" type="text" class="form-control text-right" readonly>
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightBox" type="text" class="form-control text-right" readonly>
            </div>
        </div>
    </div>
</div>