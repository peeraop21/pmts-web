<div class="row" style="width: 100%">
    <div class="col-sm-6">
        <div id="pic"  style="height:280px;width:420px">
                <div id="MainPic">
                    @*<div class="vt1" id="vt1"></div>
                    <div class="vt2" id="vt2"></div>
                    <div class="vt3" id="vt3"></div>
                    <div class="vt4" id="vt4"></div>
                    <div class="vt5" id="vt5"></div>
                    <div class="vt6" id="vt6"></div>
                    <div class="vt7" id="vt7"></div>

                    <div class="ht1" id="ht1"></div>
                    <div class="ht2" id="ht2"></div>
                    <div class="ht3" id="ht3"></div>
                    <div class="ht4" id="ht4"></div>
                    <div class="ht5" id="ht5"></div>*@

                    <div class="row">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input asp-for="modelProductSpec.ScoreL8" type="text" style="position: absolute; left: 150px; top: 32px; width: 30px; border:none; text-align:center; " class="mytextboxNumber" tabindex="-1" />
                        <input asp-for="modelProductSpec.ScoreL9" type="text" style="position: absolute; left: 118px; top: 32px; width: 30px; border:none; text-align:center; " class="mytextboxNumber" tabindex="-1" />
                        <input id="lbNoSlot" type="text" style="position: absolute; left: 362px; top: 31px; width: 30px; border:none; text-align:left; color:black; " tabindex="-1" readonly />
                        <input id="lbSlit" type="text" style="position: absolute; left: 208px; top: 147px; width: 10px; border:none; text-align:center; color:black; " tabindex="-1" readonly />
                    </div>
                    <div class="row">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <img id="tooth" src="~/images/tooth1x.jpg" /><img id="teeth2" src="~/images/tooth2x.jpg" style="display: none;" /><img id="teeth3" src="~/images/tooth3x.jpg" style="display: none;" />
                        <input asp-for="modelProductSpec.Scorew16" type="text" style="position: absolute; left: 314px; top: 93px; width: 32px; border:none; text-align:center;" tabindex="-1" />
                        <input id="SheetWid" type="text" style="position: absolute; left: 338px; top: 138px; width: 33px; border:none; color:gray; text-align:center;" class="mytextboxNumber" tabindex="-1" readonly />
                    </div>
                    <div class="row">
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <input id="SheetLeng" type="text" style="position: absolute; left: 199px; top: 242px; width: 40px; border:none; text-align:center; color:gray;" class="mytextboxNumber" tabindex="-1" readonly />
                    </div>
                </div>
                <div id="FilePic">
                    <center>
                        <br />
                        @Html.TextBoxFor(m => m.modelProductSpec.PrintMasterPath, new { @id = "iDrawingPath", @style = "display:none;" })
                        @if (Model.modelProductSpec.PrintMasterPath == null)
                        {
                            <img id="Pic_Drawing" style="width: auto; height: 220px;" />
                        }
                        else
                        {
                            <img id="Pic_Drawing" src="@Url.Content(@Model.modelProductSpec.PrintMasterPath)" style="width: auto; height: 220px;" />
                        }
                    </center>
                </div>
            <div class="row">
                <div class="col-sm-11">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input id="PrintMaster" name="PrintMaster" type="file" title="search image" accept="image/*" tabindex="-1" onchange="show_Drawing(this)" />
                </div>
                <div class="col-sm-1">
                    <i id="RM_Drawing" class="mdi mdi-close" style="color:red; display:none;" onclick="ClosePic()" tabindex="-1" ></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group row">
            <div class="col-sm-5">
                @Localizer["Inside Length"] :
            </div>
            <div class="col-sm-3">
                <input type="text" asp-for="modelProductSpec.Leg" tabindex="3" class="form-control mytextboxNumber" autocomplete="off" />
                <span id="modelProductSpec_Leg-error" class="text-danger" style="display: none;">@Localizer["Inside Length required"]</span>
            </div>
            <div class="col-sm-4">
                <button id="btProcess" class="btn btn-info waves-effect waves-light" type="button" tabindex="-1" disabled>@Localizer["Calculate"]</button>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
                @Localizer["Inside Width"] :
            </div>
            <div class="col-sm-3">
                <input type="text" asp-for="modelProductSpec.Wid" tabindex="4" class="form-control mytextboxNumber" autocomplete="off" />
                <span id="modelProductSpec_Width-error" class="text-danger" style="display: none;">@Localizer["Inside Width required"]</span>
            </div>
            <div class="col-sm-4">
                <input class="filled-in" type="checkbox" value="" id="chkTwoP" tabindex="-1" disabled>
                <label class="form-check-label" id="lbTwoP" for="chkTwoP" style="font-size:14px; font-weight:300;">
                    @Localizer["2Pieces"]
                </label>
                <input type="hidden" asp-for="modelProductSpec.TwoPiece" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
                @Localizer["Inside Height"] :
            </div>
            <div class="col-sm-3">
                <input type="text" asp-for="modelProductSpec.Hig" tabindex="5" class="form-control mytextboxNumber" autocomplete="off" />
                <span id="modelProductSpec_Hig-error" class="text-danger" style="display: none;">@Localizer["Inside Height required"]</span>
            </div>
            <div class="col-sm-4">
            </div>
        </div>
        <div class="form-group row">
            @*<div style="line-height: 40px;">*@
            <div class="col-sm-5">
                <input type="text" id="l" hidden>
                <input type="text" id="w" hidden>
                <input type="text" id="n" hidden>
                <input type="text" id="s" hidden>
                @Localizer["Cut Sheet Width"] &nbsp;<i style="color:red">*</i>&nbsp;
            </div>
            <div class="col-sm-7">
                <input type="number" asp-for="modelProductSpec.CutSheetWid" maxlength="4" tabindex="6" style="width:84px; height: 25px;" class="form-control mytextboxNumber" autocomplete="off"  />&nbsp;&nbsp;&nbsp;&nbsp;
                <span id="modelProductSpec_SheetWid-error" class="text-danger" style="display: none;">@Localizer["W' required"]</span>
            </div>
            @*</div>*@
        </div>
        <div class="form-group row">
            <div class="col-sm-5">
                @Localizer["Cut Sheet Length"]&nbsp;<i style="color:red">*</i>
            </div>
            <div class="col-sm-7">
                <input type="number" asp-for="modelProductSpec.CutSheetLeng" maxlength="4" tabindex="7" style="width:84px; height: 25px;" class="form-control mytextboxNumber" autocomplete="off" />&nbsp;&nbsp;&nbsp;&nbsp;
                <span id="modelProductSpec_SheetLeng-error" class="text-danger" style="display: none;">@Localizer["L' required"]</span>
            </div>
        </div>
        <div class="form-group row">
            <div style="line-height: 40px;">
                &nbsp;&nbsp;&nbsp;
                @Localizer["จำนวนร่องฟัน"] &nbsp;<input type="text" asp-for="modelProductSpec.No_Slot" tabindex="8" style="width:40px; height: 25px; text-align: center;" />&nbsp;&nbsp;&nbsp;&nbsp;
                @Localizer["ขนาดร่องฟัน X (mm.)"] &nbsp;<input type="number" min="0" asp-for="modelProductSpec.Slit" tabindex="9" style="width:40px; height: 25px; text-align: center;" />&nbsp;&nbsp;&nbsp;&nbsp;
                <span id="modelProductSpec_NoSlot-error" class="text-danger" style="display: none;">@Localizer["จำนวนร่องฟันต้องมากกว่า 0"]</span>
            </div>
        </div>
        <div class="form-group row">
                <span id="modelProductSpec_NoSlot-error" class="text-danger" style="display: none;">@Localizer["จำนวนร่องฟันต้องมากกว่า 0"]</span>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Sheet Board"]
            </div>
            <div class="col-sm-4" style="text-align:center;">
                @Localizer["Finished goods"] &nbsp;<i style="color:red">*</i>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                @Localizer["Area"] :
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.SheetArea" type="text" class="form-control text-right" tabindex="-1" readonly />
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.BoxArea" type="text" class="form-control text-right" tabindex="-1" required />
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Localizer["Weight"] :
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightSh" type="text" class="form-control text-right" tabindex="-1" readonly>
            </div>
            <div class="col-sm-4">
                <input asp-for="modelProductSpec.WeightBox" type="text" class="form-control text-right" tabindex="-1" readonly>
            </div>
        </div>
    </div>
</div>