@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model PMTs.DataAccess.ModelView.MaintenancePrintMethod.MaintenancePrintMethodViewModel

<div class="modal" id="modal-create">
    <div class="modal-dialog modal-lg" style="width: 90%">
        @*<div class="modal fade bs-example-modal-lg" id="modal-create" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-xl">*@
        <div class="modal-content">
            <form id="create-PrintMethod-form">
                @*asp-controller="MaintenancePrintMethod" asp-action="SavePrintMethod" data-ajax="true" data-ajax-success="onSaveSuccess" data-ajax-method="POST">*@
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">@Localizer["Create PrintMethod"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Code"]<i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="PrintMethodViewModel.Code" maxlength="12" required />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Method"]<i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="form-control" asp-for="PrintMethodViewModel.Method" maxlength="220" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["AmountColor"]<i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="number" class="form-control" asp-for="PrintMethodViewModel.AmountColor" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSubmitMaintainPrintMethod" class="btn btn-primary">@Localizer["Save"]</button>
                    <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" data-backdrop="false">@Localizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>