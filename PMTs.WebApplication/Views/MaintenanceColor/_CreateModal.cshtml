@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model PMTs.DataAccess.ModelView.MaintenanceColor.MaintenanceColorViewModel

<div class="modal" id="modal-create">
    <div class="modal-dialog modal-lg" style="width: 90%">
        @*<div class="modal fade bs-example-modal-lg" id="modal-create" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-xl">*@
        <div class="modal-content">
            <form id="create-Color-form">
                @*asp-controller="MaintenanceColor" asp-action="SaveColor" data-ajax="true" data-ajax-success="onSaveSuccess" data-ajax-method="POST">*@
                <div class="modal-header">
                    <h4 class="modal-title" id="myLargeModalLabel">@Localizer["Create Color"]</h4>
                    <button type="button" class="close" data-dismiss="modal" data-backdrop="false" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Ink"] <i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" class="form-control" asp-for="ColorViewModel.Ink" maxlength="20" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["Shade"] <i style="color:red"> *</i></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" class="form-control" asp-for="ColorViewModel.Shade" maxlength="10" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["StatusColor"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="filled-in" type="checkbox" value="" id="chkDel">
                            <label class="form-check-label" id="lbDel" for="chkDel" style="font-size:14px; font-weight:300;"></label>
                            <input type="hidden" asp-for="ColorViewModel.OptDelete" />
                        </div>

                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["MainColor"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input class="filled-in" type="checkbox" value="" id="chkMainColor">
                            <label class="form-check-label" id="lbMainColor" for="chkMainColor" style="font-size:14px; font-weight:300;"></label>
                            <input type="hidden" asp-for="ColorViewModel.IsMainColor" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label class="control-label">@Localizer["MainDensity"]</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" class="form-control" asp-for="ColorViewModel.MainDensity" maxlength="5" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnSubmitMaintainColor" class="btn btn-info">@Localizer["Save"]</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" data-backdrop="false">@Localizer["Cancel"]</button>
                </div>
            </form>
        </div>
    </div>
</div>