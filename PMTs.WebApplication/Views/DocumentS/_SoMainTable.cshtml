@model PMTs.DataAccess.ComplexModel.CreateDocumentSModel

@using PMTs.DataAccess.ModelView

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    Layout = null;
}

<table id="SnumberReportTbl" class="table table-bordered table-hover" width="100%">
    <thead class="thead-light text-center">
        <tr>
            <th style="width:15%">@Localizer["เลขที่ S"]</th>
            <th style="width:20%">@Localizer["วันที่สร้าง"]</th>
            <th style="width:20%">@Localizer["สร้างโดย"]</th>
            <th style="width:20%">@Localizer["วันที่เเก้ไข"]</th>
            <th style="width:20%">@Localizer["เเก้ไขโดย"]</th>
            <th style="width:15%">@Localizer["Action"]</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.ldocumentS)
            {
            <tr>
                <td>@item.Snumber</td>
                <td>@item.CreatedDate</td>
                <td>@item.CreatedBy</td>
                <td>@item.UpdatedDate</td>
                <td>@item.UpdatedBy</td>
                <td class="text-center">
                    <a data-target="@item.Snumber" style="cursor:pointer;padding-left:10px;padding-right:10px" onclick="EditSnumber(this.getAttribute('data-target'));">
                        <i class="fas fa-pencil-alt text-warning"></i>
                    </a>
                    <a data-target="@item.Snumber" style="cursor:pointer;padding-left:10px;padding-right:10px" onclick="PrintSnumber(this.getAttribute('data-target'));">
                        <i class="far fa-file-excel text-success"></i>
                    </a>
                    <a data-target="@item.Snumber" style="cursor:pointer;padding-left:10px;padding-right:10px" onclick="PrintSnumberPDF(this.getAttribute('data-target'));">
                        <i class="far fa-file-pdf text-success"></i>
                    </a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>