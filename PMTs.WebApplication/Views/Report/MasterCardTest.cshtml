@{
    Layout = null;
}
@model List<PMTs.DataAccess.ModelView.MasterCardMO>

<html>
<head>
    <link href="~/AdminLTE/bower_components/bootstrap/dist/css/bootstrap.min5.css" rel="stylesheet" />
    <script src="~/AdminLTE/jquery-1.9.1.js"></script>
    <style>
        .barcodetext {
            font-family: 'Free 3 of 9';
            line-height: 0.5;
            font-size: 60px;
        }

        .line {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    @foreach (var item in Model)
    {
        <table style="width: 100%; height: 78px;">
            <tbody>
                <tr>
                    <td>
                        <div class="row">
                            <div class="col-xs-1">
                                <img src="~/pic/Logo_SCG.jpg" width="75" height="75" />
                            </div>

                            <div class="col-xs-7">
                                <div>
                                    <font size="5">@item.Factory</font> <br>
                                    <div class="row ">
                                        <div class="col-xs-6 " style="height:30px">
                                            @if (item.OrderItem == "" || item.OrderItem == null)
                                            {
                                                <font size="6">Master Card</font>

                                            }
                                            else
                                            {
                                                <font size="6">Master Card M/O</font>
                                            }
                                        </div>
                                        <div class="col-xs-3 button-text" style="height:100px">
                                            <font>@item.DocName</font>
                                        </div>
                                        <div class="col-xs-3">
                                            <font>@item.DocDate</font>
                                        </div>
                                    </div>
                                </div>
                                @*<label>@Model.Factory</label>*@
                            </div>
                            <div class="col-xs-4 text-center">
                                @if (item.OrderItem == "" || item.OrderItem == null)
                                {
                                    <font size="20" class="barcodetext">@item.EanCode</font>
                                    <font>@item.EanCode</font>

                                }
                                else
                                {
                                    <font size="20" class="barcodetext">@item.OrderItem</font>
                                    <font>@item.OrderItem</font>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <table style="width: 100%;" border="1">
            <tbody>
                <tr>
                    <td>x</td>
                    <td>x</td>
                </tr>
            </tbody>
        </table>
    }
</body>
</html>
<script>
    $(document).ready(function () {
        alert("Ok");
        window.print();
    });
</script>