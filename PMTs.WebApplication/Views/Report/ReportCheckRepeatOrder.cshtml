        function SearchCheckOrder() {
            if ($("#input-datetimepicker-start").val() == "") {
                $("#input-datetimepicker-start").focus();

                $("#StartDueDateReq").attr("hidden", false);
            }
            else if ($("#input-datetimepicker-end").val() == "") {
